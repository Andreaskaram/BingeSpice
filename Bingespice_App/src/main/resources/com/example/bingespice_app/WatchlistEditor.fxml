<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.CreateEditWatchlistScreen">

   <!-- Left Sidebar -->
   <left>
      <fx:include source="SideBar.fxml" />
   </left>

   <top>
      <fx:include source="TopBar.fxml" />
   </top>

   <!-- Main Content Area -->
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #2C2D40;" vbarPolicy="NEVER">
         <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #2C2D40;">
            <!-- Search Bar -->
            <fx:include source="SearchBar.fxml" />
            <Label fx:id="modeLabel" contentDisplay="CENTER" text="Create New Watchlist" textFill="#fd6108">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <TextField promptText="Enter Watchlsit name" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" text="Confirm" />
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
