<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.SearchResultsController">
   <left>
      <fx:include source="SideBar.fxml" />
   </left>

   <top>
      <fx:include source="TopBar.fxml" />
   </top>

   <center>
      <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #2C2D40;">
         <!-- Search Bar -->
         <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 20 0;">
            <MenuButton fx:id="searchOptionsMenuButton" mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-padding: 0; -fx-background-radius: 20;" text="Search options" textFill="#fd6108">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleSearchOption" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Title" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSearchOption" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Genre" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSearchOption" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Actor" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSearchOption" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Director" />
               </items>
               <graphic>
                  <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                     <image>
                        <Image url="@../../../hamburger.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuButton>
            <TextField fx:id="searchField" promptText="Find your next binge-worthy pick!" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108; -fx-background-radius: 20;" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16" />
               </font>
            </TextField>
            <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;">
               <graphic>
                  <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                     <image>
                        <Image url="@../../../search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </HBox>

         <!-- Recommended Section -->
         <VBox fx:id="recommendedVBox" spacing="10" styleClass="section">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Popular:" textFill="#fd6108">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <ScrollPane fitToHeight="true" hbarPolicy="NEVER" pickOnBounds="false" style="-fx-background-color: #2C2D40;" vbarPolicy="NEVER">
               <content>
                  <HBox fx:id="recommendedHBox" alignment="CENTER" spacing="10" style="-fx-background-color: #2C2D40;" />
               </content>
            </ScrollPane>
         </VBox>

         <!-- Watch Next Section -->
         <VBox fx:id="watchNextVBox" spacing="10" styleClass="section">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="New Arrivals:" textFill="#fd6108">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <ScrollPane fitToHeight="true" hbarPolicy="NEVER" pickOnBounds="false" style="-fx-background-color: #2C2D40;" vbarPolicy="NEVER">
               <content>
                  <HBox fx:id="watchNextHBox" alignment="CENTER" spacing="10" style="-fx-background-color: #2C2D40;" />
               </content>
            </ScrollPane>
         </VBox>
      </VBox>
   </center>
</BorderPane>
