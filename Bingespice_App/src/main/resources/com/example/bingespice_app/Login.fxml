<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.LoginController">

    <top>
        <fx:include source="TopBar.fxml"/>
    </top>

    <center>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="245.0" prefWidth="307.0" spacing="20" style="-fx-background-color: #2A2035;">
            <Text style="-fx-fill: #FD6108; -fx-font-size: 24; -fx-font-weight: bold;" text="Login" />

            <!-- Container for label and text field -->
            <VBox alignment="CENTER" spacing="10">
                <Text style="-fx-fill: white;" text="Username:" />
                <TextField fx:id="loginUsername" maxWidth="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 20;" />

                <Text style="-fx-fill: white;" text="Password:" />
                <PasswordField fx:id="loginPassword" maxWidth="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 20;" />
            </VBox>

            <Button fx:id="loginButton" maxWidth="200" prefWidth="200.0" style="-fx-background-color: #FD6108; -fx-text-fill: white; -fx-font-weight: bold;" text="Login" />

            <Text fx:id="loginError" style="-fx-fill: red; -fx-font-weight: bold;" text="" visible="false" />
        </VBox>
    </center>
</BorderPane>
