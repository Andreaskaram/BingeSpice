<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--
  FXML for the login screen. Uses a BorderPane with a top bar include,
  and centers a VBox containing the login form controls.
-->
<BorderPane fx:controller="com.example.bingespice_app.LoginController"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #2A2035;">

    <!-- Top bar (e.g. close/minimize buttons) -->
    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <!-- Centered login form -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #2A2035;">
            <!-- Header text -->
            <Text text="Login"
                  style="-fx-fill: #FD6108; -fx-font-size: 24; -fx-font-weight: bold;" />

            <!-- Input fields and checkbox -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="Username:" style="-fx-fill: white;" />
                <TextField fx:id="loginUsername"
                           maxWidth="200"
                           style="-fx-background-color: white; -fx-background-radius: 20;" />

                <Text text="Password:" style="-fx-fill: white;" />
                <PasswordField fx:id="loginPassword"
                               maxWidth="200"
                               style="-fx-background-color: white; -fx-background-radius: 20;" />

                <!-- Remember me option -->
                <CheckBox fx:id="rememberMe"
                          text="Remember Me"
                          style="-fx-text-fill: white;" />
            </VBox>

            <!-- Login button triggers handleLoginAttempt -->
            <Button text="Login"
                    onAction="#handleLoginAttempt"
                    maxWidth="200"
                    style="-fx-background-color: #FD6108;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;" />

            <!-- Error message placeholder -->
            <Text fx:id="loginError"
                  visible="false"
                  style="-fx-fill: red;
                         -fx-font-weight: bold;" />
        </VBox>
    </center>
</BorderPane>
