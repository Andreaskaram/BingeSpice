<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.LoginController">

    <center> <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

        <Text style="-fx-fill: #FD6108; -fx-font-size: 24; -fx-font-weight: bold;" text="Login" />

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="10">
            <Text style="-fx-fill: white;" text="Username:" />
            <TextField fx:id="loginUsername" style="-fx-background-color: white; -fx-pref-width: 300;" />

            <Text style="-fx-fill: white; margin-top: 15;" text="Password:" />
            <PasswordField fx:id="loginPassword" style="-fx-background-color: white; -fx-pref-width: 300;" />
        </VBox>

        <Button style="-fx-background-color: #FD6108; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 300;" text="Login" />

        <Text fx:id="loginError" style="-fx-fill: red; -fx-font-weight: bold;" text="" visible="false" />
    </VBox>  </center>
</BorderPane>
