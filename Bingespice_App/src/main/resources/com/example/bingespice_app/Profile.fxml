<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.Controller">

   <!-- Left Sidebar -->
   <left>
      <fx:include source="SideBar.fxml" />
   </left>

   <top>
      <fx:include source="TopBar.fxml" />
   </top>

   <!-- Main Content Area -->
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #2C2D40;" vbarPolicy="NEVER">
         <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #2C2D40;">
            <!-- Search Bar -->
            <fx:include source="SearchBar.fxml" />

            <!-- Content Sections -->
            <VBox spacing="40">
               <!-- Profile Section -->
               <VBox spacing="20">
                  <FlowPane hgap="20" prefWrapLength="1000" vgap="20">
                     <Pane maxHeight="786.0" maxWidth="1001.0" minHeight="350.0" minWidth="300" prefHeight="786.0" prefWidth="1001.0" style="-fx-background-color: #2C2D40;">
                        <children>
                           <!-- Profile Picture -->
                           <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="150.0" layoutX="30.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true" />

                           <!-- Edit Profile Button -->
                           <Button fx:id="editProfileButton" onAction="#handleEditProfile" layoutX="177.0" layoutY="25.0" mnemonicParsing="false" prefHeight="65.0" prefWidth="288.0" style="-fx-background-color: #2C2D40;" text="Edit Profile" textFill="#fd6108">
                              <graphic>
                                 <ImageView fitHeight="44.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../../../edit.png" />
                                    </image>
                                    <cursor>
                                       <Cursor fx:constant="HAND" />
                                    </cursor>
                                 </ImageView>
                              </graphic>
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                              <font>
                                 <Font name="System Bold" size="24.0" />
                              </font>
                           </Button>

                           <!-- Account Details Title -->
                           <Text fill="#fd6108" layoutX="44.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Account Details:">
                              <font>
                                 <Font name="System Bold" size="36.0" />
                              </font>
                           </Text>

                           <!-- User Details Section -->
                           <Text fill="#fd6108" layoutX="44.0" layoutY="265.0" strokeType="OUTSIDE" strokeWidth="0.0" text="First Name:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="firstNameText" fill="#ffffff" layoutX="250.0" layoutY="265.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <Text fill="#fd6108" layoutX="44.0" layoutY="305.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="lastNameText" fill="#ffffff" layoutX="250.0" layoutY="305.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <!-- Username Field (Added) -->
                           <Text fill="#fd6108" layoutX="44.0" layoutY="345.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="usernameText" fill="#ffffff" layoutX="250.0" layoutY="345.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <Text fill="#fd6108" layoutX="44.0" layoutY="385.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="emailText" fill="#ffffff" layoutX="250.0" layoutY="385.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <Text fill="#fd6108" layoutX="44.0" layoutY="425.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gender:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="genderText" fill="#ffffff" layoutX="250.0" layoutY="425.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <Text fill="#fd6108" layoutX="44.0" layoutY="465.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Country:" wrappingWidth="196.13671875">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>
                           <Text fx:id="countryText" fill="#ffffff" layoutX="250.0" layoutY="465.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading..." wrappingWidth="300.0">
                              <font>
                                 <Font name="System Bold" size="26.0" />
                              </font>
                           </Text>

                           <!-- Statistics Section -->
                           <Text fill="#fd6108" layoutX="628.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Statistics:">
                              <font>
                                 <Font name="System Bold" size="24.0" />
                              </font>
                           </Text>

                           <ScrollPane layoutX="38.0" layoutY="237.0" prefHeight="527.0" prefWidth="575.0" visible="false">
                              <content>
                                 <TextArea editable="false" prefHeight="525.0" prefWidth="573.0" visible="false" />
                              </content>
                           </ScrollPane>

                           <BarChart layoutX="606.0" layoutY="486.0" prefHeight="292.0" prefWidth="381.0">
                              <xAxis>
                                 <CategoryAxis side="BOTTOM" />
                              </xAxis>
                              <yAxis>
                                 <NumberAxis side="LEFT" />
                              </yAxis>
                           </BarChart>

                           <LineChart layoutX="614.0" layoutY="154.0" prefHeight="312.0" prefWidth="365.0" style="-fx-background-color: #2C2D40;">
                              <xAxis>
                                 <CategoryAxis side="BOTTOM" />
                              </xAxis>
                              <yAxis>
                                 <NumberAxis side="LEFT" />
                              </yAxis>
                           </LineChart>
                        </children>
                     </Pane>
                  </FlowPane>
               </VBox>

               <!-- Empty Section for future content -->
               <VBox spacing="20" />
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>