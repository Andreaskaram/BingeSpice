<BorderPane style="-fx-background-color: #2A2035;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bingespice_app.Controller">

   <!-- Left Sidebar -->
   <left>
      <VBox maxWidth="300" minWidth="150" prefWidth="200" style="-fx-background-color: #2A2035;">
         <!-- Logo remains as ImageView -->
         <ImageView fitWidth="200" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../Logo.png" />
            </image>
         </ImageView>

         <!-- Menu Items -->
         <VBox spacing="20" style="-fx-padding: 20 10;">
            <!-- Homepage -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Button style="-fx-background-color: transparent; -fx-padding: 0;" onAction="#loadHomepage">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../homepage.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Text style="-fx-fill: #FD6108;" text="Homepage">
                  <font>
                     <Font name="System Bold" size="18" />
                  </font>
               </Text>
            </HBox>

            <!-- Watchlist -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Button style="-fx-background-color: transparent; -fx-padding: 0;" onAction="#loadWatchlist">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../heart.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Text style="-fx-fill: #FD6108;" text="Watchlist">
                  <font>
                     <Font name="System Bold" size="18" />
                  </font>
               </Text>
            </HBox>

            <!-- Inbox -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Button style="-fx-background-color: transparent; -fx-padding: 0;">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../bell.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Text style="-fx-fill: #FD6108;" text="Inbox">
                  <font>
                     <Font name="System Bold" size="18" />
                  </font>
               </Text>
            </HBox>

            <!-- Profile -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Button style="-fx-background-color: transparent; -fx-padding: 0;" onAction="#loadProfile">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../profile-user.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Text style="-fx-fill: #FD6108;" text="Profile">
                  <font>
                     <Font name="System Bold" size="18" />
                  </font>
               </Text>
            </HBox>

            <!-- Settings -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Button style="-fx-background-color: transparent; -fx-padding: 0;" onAction="#loadSettings">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../setting.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Text style="-fx-fill: #FD6108;" text="Settings">
                  <font>
                     <Font name="System Bold" size="18" />
                  </font>
               </Text>
            </HBox>
         </VBox>
      </VBox>
   </left>

   <!-- Main Content Area -->
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #2C2D40;">
            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 20 0;">
               <MenuButton mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-padding: 0;" text="Search options" textFill="#fd6108">
                 <items>
                     <MenuItem mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Title" />
                   <MenuItem mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Genre" />
                     <MenuItem mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Actor" />
                     <MenuItem mnemonicParsing="false" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" text="Director" />
                 </items>
                  <graphic>
                     <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                        <image>
                           <Image url="@../../../hamburger.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </MenuButton>
               <TextField fx:id="searchField" promptText="Find your next binge-worthy pick!" style="-fx-background-color: #2A2035; -fx-text-fill: #FD6108;" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="16" />
                  </font>
               </TextField>
               <Button fx:id="searchButton" style="-fx-background-color: transparent; -fx-padding: 0;" onAction="#loadSearch_Results_Selected">
                  <graphic>
                     <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <image>
                           <Image url="@../../../search.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
            </HBox>

            <!-- Content Sections (unchanged) -->
            <VBox spacing="40">
               <!-- Recommended Section -->
               <VBox spacing="20">
                  <FlowPane hgap="20" prefWrapLength="1000" vgap="20">
                     <Pane maxHeight="786.0" maxWidth="1001.0" minHeight="350.0" minWidth="300" prefHeight="786.0" prefWidth="1001.0" style="-fx-background-color: #2C2D40;">
                        <children>
                           <ImageView fitHeight="103.0" fitWidth="108.0" layoutX="30.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true" />
                           <Text fill="#fd6108" layoutX="165.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Edit profile">
                              <font>
                                 <Font name="System Bold" size="24.0" />
                              </font>
                           </Text>
                           <Text fill="#fd6108" layoutX="177.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="158.13671875">
                              <font>
                                 <Font size="36.0" />
                              </font>
                           </Text>
                           <Text fill="#fd6108" layoutX="44.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Account Details:">
                              <font>
                                 <Font name="System Bold" size="36.0" />
                              </font>
                           </Text>
                           <Text fill="#fd6108" layoutX="628.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Statistics:">
                              <font>
                                 <Font name="System Bold" size="24.0" />
                              </font>
                           </Text>
                           <ScrollPane layoutX="38.0" layoutY="237.0" prefHeight="527.0" prefWidth="575.0" visible="false">
                              <content>
                                 <TextArea prefHeight="525.0" prefWidth="573.0" visible="false" />
                              </content>
                           </ScrollPane>
                           <BarChart layoutX="606.0" layoutY="486.0" prefHeight="292.0" prefWidth="381.0">
                             <xAxis>
                               <CategoryAxis side="BOTTOM" />
                             </xAxis>
                             <yAxis>
                               <NumberAxis side="LEFT" />
                             </yAxis>
                           </BarChart>
                           <LineChart layoutX="614.0" layoutY="154.0" prefHeight="312.0" prefWidth="365.0" style="-fx-background-color: #2C2D40;">
                             <xAxis>
                               <CategoryAxis side="BOTTOM" />
                             </xAxis>
                             <yAxis>
                               <NumberAxis side="LEFT" />
                             </yAxis>
                           </LineChart>
                           <Button layoutX="309.0" layoutY="24.0" mnemonicParsing="false" style="-fx-background-color: #2C2D40;" textFill="#2c2d40">
                              <graphic>
                                 <ImageView fitHeight="44.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../../../edit.png" />
                                    </image>
                                 </ImageView>
                              </graphic>
                           </Button>
                        </children></Pane>
                  </FlowPane>
               </VBox>

               <!-- Watch Next Section -->
               <VBox spacing="20" />
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
